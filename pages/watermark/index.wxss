/* 去水印页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 上传区域 */
.upload-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.upload-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.upload-options {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.upload-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx dashed #dee2e6;
  transition: all 0.3s ease;
}

.upload-option:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.option-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.option-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #666;
}

/* 链接输入区域 */
.link-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.input-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.link-input-container {
  position: relative;
  margin-bottom: 30rpx;
}

.link-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 120rpx 20rpx 20rpx;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.input-actions {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  display: flex;
  gap: 10rpx;
}

.clear-btn, .paste-btn {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  background: #f8f9fa;
  border: 1rpx solid #dee2e6;
}

.clear-btn:active, .paste-btn:active {
  background: #e9ecef;
}

.platform-tips {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 30rpx;
  padding: 16rpx 20rpx;
  background: #e7f3ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.tip-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1890ff;
}

.process-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.process-btn:active {
  opacity: 0.8;
}

.process-btn.disabled {
  background: #ccc;
  color: #999;
}

.process-btn.disabled:active {
  opacity: 1;
}

/* 处理结果区域 */
.result-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.result-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.download-btn, .share-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.download-btn {
  background: #28a745;
  color: #fff;
}

.share-btn {
  background: #17a2b8;
  color: #fff;
}

/* 使用说明区域 */
.guide-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.guide-step {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.step-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}