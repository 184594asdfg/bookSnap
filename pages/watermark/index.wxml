<view class="container">
  <!-- 页面头部 -->
  <view class="page-header">
    <view class="header-title">
      <text class="header-icon">🚫</text>
      <text>一键去水印</text>
    </view>
    <view class="header-desc">快速清除视频平台水印，支持多种格式</view>
  </view>

  <!-- 上传区域 -->
  <view class="upload-section">
    <view class="upload-title">选择视频来源</view>
    
    <view class="upload-options">
      <view class="upload-option" bindtap="uploadVideo">
        <text class="option-icon">📱</text>
        <text class="option-title">上传本地视频</text>
        <text class="option-desc">从手机相册选择</text>
      </view>
      
      <view class="upload-option" bindtap="pasteLink">
        <text class="option-icon">🔗</text>
        <text class="option-title">粘贴视频链接</text>
        <text class="option-desc">支持抖音、快手等平台</text>
      </view>
    </view>
  </view>

  <!-- 链接输入区域 -->
  <view class="link-section" wx:if="{{showLinkInput}}">
    <view class="input-title">粘贴视频链接</view>
    <view class="link-input-container">
      <textarea 
        class="link-input" 
        placeholder="请输入抖音、快手、B站等平台的视频链接..."
        placeholder-style="color:#999"
        value="{{videoLink}}"
        bindinput="onLinkInput"
        maxlength="500"
        auto-height
      ></textarea>
      <view class="input-actions">
        <text class="clear-btn" bindtap="clearLink" wx:if="{{videoLink}}">清空</text>
        <text class="paste-btn" bindtap="pasteFromClipboard">粘贴</text>
      </view>
    </view>
    
    <view class="platform-tips">
      <text class="tip-icon">💡</text>
      <text class="tip-text">支持抖音、快手、B站、小红书等主流平台</text>
    </view>
    
    <button class="process-btn {{videoLink ? 'active' : 'disabled'}}" bindtap="processLink" disabled="{{!videoLink}}">
      {{isProcessing ? '处理中...' : '开始去水印'}}
    </button>
  </view>

  <!-- 处理结果 -->
  <view class="result-section" wx:if="{{processedVideo}}">
    <view class="result-title">处理完成</view>
    <video 
      src="{{processedVideo}}" 
      controls 
      class="result-video"
    ></video>
    <view class="result-actions">
      <button class="download-btn" bindtap="downloadVideo">下载视频</button>
      <button class="share-btn" bindtap="shareVideo">分享</button>
    </view>
  </view>

  <!-- 使用说明 -->
  <view class="guide-section">
    <view class="section-title">使用说明</view>
    <view class="guide-steps">
      <view class="guide-step">
        <text class="step-number">1</text>
        <text class="step-text">选择视频来源（上传或粘贴链接）</text>
      </view>
      <view class="guide-step">
        <text class="step-number">2</text>
        <text class="step-text">系统自动识别并去除水印</text>
      </view>
      <view class="guide-step">
        <text class="step-number">3</text>
        <text class="step-text">下载或分享处理后的视频</text>
      </view>
    </view>
  </view>
</view>