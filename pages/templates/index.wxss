/* 模板页面样式 */
.container {
  padding: 20rpx 20rpx 120rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 分类导航 */
.category-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  gap: 20rpx;
}

.category-item {
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #667eea;
  color: #fff;
}

/* 模板网格 */
.templates-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.templates-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.template-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
}

.template-item:active {
  transform: scale(0.95);
}

.template-preview {
  position: relative;
  height: 0;
  padding-bottom: 133.33%; /* 3:4比例，高度为宽度的133.33% */
  background: #e9ecef;
  overflow: hidden;
}

.template-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}



.template-info {
  padding: 20rpx;
  min-height: 150rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: linear-gradient(to bottom, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.7) 50%, rgba(255,255,255,0.4) 100%);
  backdrop-filter: blur(5px);
}

.template-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 30%;
  background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0) 100%);
  display: flex;
  align-items: flex-end;
  padding: 20rpx;
  box-sizing: border-box;
}

.template-title {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  line-height: 1.3;
  max-height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.template-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
  max-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  flex-shrink: 0;
  text-shadow: 0 1rpx 2rpx rgba(255,255,255,0.8);
}

.template-stats {
  display: flex;
  gap: 16rpx;
  margin-top: auto;
  flex-shrink: 0;
}

.template-actions {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.stat-item {
  font-size: 20rpx;
  color: #888;
}

.template-actions {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(0, 0, 0, 0.05);
}

.use-btn {
  flex: 1;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.favorite-btn {
  font-size: 28rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.favorite-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #666;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.7;
}

/* 加载更多 */
.load-more {
  text-align: center;
  margin-top: 40rpx;
}

.load-btn {
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 预览模态框 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 25rpx 50rpx rgba(0, 0, 0, 0.4);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.preview-header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 30rpx;
}

.preview-close {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.preview-close:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.9);
}

.video-container {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.preview-video {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.video-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx dashed rgba(255, 255, 255, 0.4);
  border-radius: 16rpx;
}

.placeholder-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.8;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.placeholder-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  letter-spacing: 0.5rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.preview-info {
  margin-bottom: 30rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.preview-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  text-align: center;
  font-weight: 400;
  letter-spacing: 0.3rpx;
}

.preview-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 模板名称在视频下方 */
.template-title-section {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.template-title-below {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  text-align: center;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 0.5rpx;
}

.preview-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.preview-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.preview-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.preview-btn.primary {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.3);
}

.preview-btn.primary:active {
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.4);
}



.header-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.header-actions {
  display: flex;
  align-items: center;
}

.export-btn {
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.export-btn:active {
  background: #096dd9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.3);
}

.template-export {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.template-export:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.export-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}


.load-complete {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  margin: 20rpx 0;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx dashed #e9ecef;
}

.complete-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.complete-text {
  font-size: 28rpx;
  color: #28a745;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.complete-desc {
  font-size: 24rpx;
  color: #6c757d;
}