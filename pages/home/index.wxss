/* 首页全新设计样式 */

/* 页面基础样式 */
page {
  width: 100%;
  min-width: 100%;
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
}

.container {
  width: 100%;
  min-height: 100vh;
  background: transparent;
}

/* 顶部英雄区域 */
.hero-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 30rpx 50rpx;
  border-radius: 0 0 48rpx 48rpx;
  box-shadow: 0 15rpx 40rpx rgba(102, 126, 234, 0.4);
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1%, transparent 1%);
  background-size: 20rpx 20rpx;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-10px) rotate(180deg); }
}

.hero-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.app-logo {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.logo-icon {
  font-size: 88rpx;
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.3));
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.logo-text {
  display: flex;
  flex-direction: column;
}

.app-name {
  font-size: 52rpx;
  font-weight: 800;
  color: white;
  line-height: 1.1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 0.5rpx;
}

.app-tagline {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-top: 12rpx;
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

/* 用户状态卡片 */
.user-stats {
  display: flex;
  gap: 48rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
}

.stat-number {
  font-size: 40rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
  font-weight: 500;
}

/* 功能入口区域 */
.features-section {
  padding: 50rpx 30rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 24rpx;
}

/* 移动设备响应式调整 */
@media screen and (max-width: 750rpx) {
  .features-grid {
    grid-template-columns: 1fr 1fr;
  }
}

.feature-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 20rpx;
  padding: 36rpx 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.4s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s ease;
}

.feature-card:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  background: linear-gradient(135deg, #f0f4f8 0%, #e8ecef 100%);
}

.feature-card:active::before {
  left: 100%;
}

.feature-card.disabled {
  opacity: 0.5;
  filter: grayscale(0.5);
}

.feature-card.disabled:active {
  transform: none;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
}

.feature-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s ease;
}

.feature-card:active .feature-icon {
  transform: scale(1.1);
}

.feature-info {
  flex: 1;
}

.feature-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2d3748;
  display: block;
  margin-bottom: 12rpx;
  letter-spacing: 0.3rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.5;
  font-weight: 500;
}

.feature-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 16rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
  z-index: 2;
}

.feature-badge.coming-soon {
  background: linear-gradient(135deg, #95a5a6 0%, #7b8a8b 100%);
  box-shadow: 0 2rpx 8rpx rgba(149, 165, 166, 0.3);
}

/* 快速上手区域 */
.quick-start-section {
  padding: 40rpx 30rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(102, 126, 234, 0.1);
}

.quick-start-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.quick-start-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.quick-start-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  background: #f8f9fa;
}

.quick-start-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.quick-start-info {
  flex: 1;
}

.quick-start-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.quick-start-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 热门书单区域 */
.hot-books-section {
  padding: 40rpx 30rpx;
}

.hot-books-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.hot-book-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
}

.hot-book-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.book-cover {
  font-size: 60rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
}

.book-info {
  flex: 1;
}

.book-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.book-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  font-size: 22rpx;
  color: #999;
}

/* 快速开始创作按钮 */
.quick-start-section {
  padding: 60rpx 30rpx 80rpx;
  text-align: center;
  position: relative;
}

.quick-start-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.3), transparent);
}

.quick-start-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 60rpx;
  padding: 28rpx 56rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.4s ease;
  position: relative;
  overflow: hidden;
}

.quick-start-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.quick-start-btn:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.4);
}

.quick-start-btn:active::before {
  left: 100%;
}

.btn-icon {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.btn-text {
  font-size: 32rpx;
  letter-spacing: 0.5rpx;
}



/* 响应式设计 */
@media (max-width: 375px) {
  .hero-section {
    padding: 50rpx 25rpx 70rpx;
  }
  
  .logo-icon {
    font-size: 70rpx;
  }
  
  .app-name {
    font-size: 42rpx;
  }
  
  .features-grid {
    gap: 20rpx;
  }
  
  .templates-section,
  .activities-section,
  .quick-start-section {
    padding-left: 25rpx;
    padding-right: 25rpx;
  }
  
  /* 底部响应式 */
  .footer-section {
    padding: 40rpx 25rpx 30rpx;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: 30rpx;
  }
  
  .footer-links {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .copyright-section {
    flex-direction: column;
    gap: 16rpx;
    text-align: center;
  }
}