<view class="container">
  <!-- 顶部英雄区域 -->
  <view class="hero-section" style="height: {{homeConfig.heroHeight}}; background: {{homeConfig.heroGradient}}">
    <view class="hero-content">
      <!-- 应用logo和名称 -->
      <view class="app-logo">
        <text class="logo-icon">📚</text>
        <view class="logo-text">
          <text class="app-name">{{homeConfig.heroTitle}}</text>
          <text class="app-tagline">{{homeConfig.heroTagline}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 功能入口区域 -->
  <view class="features-section">

    
    <view class="features-grid">
      <block wx:for="{{sections}}" wx:key="sectionKey">
        <!-- 动态渲染功能板块 -->
        <view 
          wx:if="{{item.isEnabled === 0}}"
          class="feature-card {{item.isDisabled === 1 ? 'disabled' : ''}}"
          bindtap="navigateToSection"
          data-section="{{item}}"
        >
          <view class="feature-icon">{{item.sectionIcon}}</view>
          <view class="feature-info">
            <text class="feature-name">{{item.sectionName}}</text>
            <text class="feature-desc">{{item.sectionDesc || '暂无描述'}}</text>

          </view>
          <view class="feature-badge {{item.badgeType === 'coming-soon' ? 'coming-soon' : ''}}">
            {{item.badgeText}}
          </view>
        </view>

      </block>
    </view>
  </view>
</view>