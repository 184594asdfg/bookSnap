.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to top, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.8) 50%, rgba(255,255,255,0.4) 100%);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(255,255,255,0.3);
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 999;
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  flex: 1;
  padding-bottom: 20rpx;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.7);
  font-weight: 500;
}

.tab-bar-item.active .tab-text {
  color: #8B4513;
  font-weight: bold;
}